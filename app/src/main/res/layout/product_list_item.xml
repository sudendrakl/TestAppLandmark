<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_margin="5dp"
    android:padding="5dp"
    >
  <ImageView
      android:id="@+id/img"
      android:layout_width="345dp"
      android:layout_height="345dp"
      android:src="@mipmap/ic_launcher"
      android:layout_centerHorizontal="true"
      />
  <TextView
      android:id="@+id/left_badge"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@id/img"
      android:layout_alignBottom="@id/img"
      android:background="@color/leftBadge"
      />
  <TextView
      android:id="@+id/right_badge"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignRight="@id/img"
      android:layout_alignBottom="@id/img"
      android:background="@color/rightBadge"
      />
  <TextView
      android:id="@+id/type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAllCaps="true"
      android:textColor="@color/text"
      android:layout_below="@id/img"
      />
  <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/text"
      android:layout_below="@id/type"
      />
  <TextView
      android:id="@+id/curr_and_price"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:layout_below="@id/title"
      />
  <TextView
      android:id="@+id/old_price"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/title"
      android:layout_toRightOf="@id/curr_and_price"
      android:textColor="@color/priceOld"
      android:text="@string/strike"

      />
</RelativeLayout>